<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_blue</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/dark_blue</item>
    </style>

    <style name="Githubuser.CollapsingToolbar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="Githubuser.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Githubuser.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Githubuser.TextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Githubuser.ToolbarAppearance" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.GithubUser.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GithubUser.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Githubuser.TabLayout" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="tabTextColor">@color/light_gray</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Githubuser.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/light_gray</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>